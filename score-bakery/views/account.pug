doctype html
html
  head
    title Account
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(rel='stylesheet', type='text/css', href='/css/account.css')
    link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet')
    link(href='http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/css/bootstrap.min.css', rel='stylesheet', media='screen')
  body
    header
      .col-md-3
        a(href='/category')
          img(src='/images/SCORElogo.jpg')
      .col-md-5
      .col-md-2.pastOrders
        a(href='/shoppingcart') Shopping Cart
      .col-md-2.account
        ul
          if user
            a(href='/account')
              span= user.username
              i.caret
    .row.green
      .col-md-1
      .col-md-10
        .row
          h2 Profile
        #user-details.row
          | Name: #{user.name}
          br
          | Username: #{user.username}
          br
          | Email: #{user.email}
          br
          | Phone: #{user.phone}
  

        .row.edit
          input#edit.btn.btn-default(type='button', value='Edit profile')
        #formRowTpl.row.edit-form
          .col-md-5
            .form-area
              form(role='form')
                br(style='clear:both')
                h4(style='margin-bottom: 25px; text-align: center;')
                  | Please fill in this contact form to edit your account or email us at email@email.com
                .form-group
                  input#name.form-control(type='text', name='name', placeholder='Name', required='')
                .form-group
                  input#email.form-control(type='text', name='email', placeholder='Email', required='')
                .form-group
                  input#mobile.form-control(type='text', name='mobile', placeholder='Mobile Number', required='')
                .form-group
                  input#subject.form-control(type='text', name='subject', placeholder='Subject', required='')
                .form-group
                  textarea#message.form-control(type='textarea', placeholder='Message', maxlength='140', rows='7')
                  span.help-block
                    p#characterLeft.help-block You have reached the limit
                button#submit.btn.btn-primary.pull-right(type='button', name='submit') Submit Form
    .row.details
      .col-md-1
      .contact
        p
          | Contact Person:
          br
          |           Mr John LOW
          br
          |           +65 1234 5678
          br
          |           email@email.com
      .contact
        p
          b COMPANY
          br
          br
          |           ABOUT US
          br
          |           HOW TO ORDER
          br
          |           CAREER
      .privacy
        p
          | PRIVACY POLICY | TERMS & CONDITIONS
          br
          |           COPYRIGHT Â© 2017 SCORE BAKERY PTE LTD. ALL RIGHTS RESERVED
      .halal
        img(src='/images/halal.jpg', width='60px', height='60px')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/js/bootstrap.min.js')
    script(src='/javascripts/accountscript.js')
